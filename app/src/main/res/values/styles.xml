<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#07104C</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/colorPrimary</item>
        <item name="itemIconTint">#877DC3</item>
        <item name="android:textColor">#E0E7EA</item>
    </style>
    
    <style name="Theme.StartApp" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/u</item>
        <item name="postSplashScreenTheme">@style/Theme.SplashScreen</item>
    </style>

</resources>